<h1>Today</h1>

<table class="todays-events">

<% @events.each do |event| %>
  <tr>
    <td><%= event.name %></td>
    <td><%= event.begin_time.strftime("%-I:%M %p") %> - <%= event.end_time.strftime("%-I:%M %p") %></td>
    <% if false %>
      <td><%= link_to 'Show', event %></td>
      <td><%= link_to 'Edit', edit_event_path(event) %></td>
      <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
    <td>Liked</td>
  </tr>
  <tr class="details">
    <td></td>
    <td><%= event.description %></td>
    <td>
      <%= image_tag 'mike.png', width: '30px' %>
      <%= image_tag 'joe-dirt.jpg', width: '30px' %>
    </td>
  </tr>
<% end %>
</table>

<br />

