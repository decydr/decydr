                 <div class="span10">
<section>
  <h2>Today:</h2>
  <%= javascript_tag do %>
    $(document).ready(function() {

        // page is now ready, initialize the calendar...

        $('#calendar').fullCalendar({
          defaultView: 'agendaDay',
          height: 300,
          columnFormat: {
              month: '',    // Mon
              week: '', // Mon 9/7
              day: ''  // Monday 9/7
                      },
          events: [
                  <% @events.each_with_index do |event, index| %>
                  {
                    title: "<%= event.display_name %>",
                    start: new Date(<%= event.begin_time.year %>,<%= event.begin_time.month - 1 %>,<%= event.begin_time.day %>,<%= event.begin_time.hour %>,<%= event.begin_time.strftime('%M') %>),
                    end: new Date(<%= event.end_time.year %>,<%= event.end_time.month - 1%>,<%= event.end_time.day %>,<%= event.end_time.hour %>,<%= event.end_time.strftime('%M') %>),
                    allDay: false
                  }<%= ',' if index < (@events.length - 1) %>
                  <% end %>
                 ]
        })

    });
  <% end %>
  <div id="calendar"></div>
</section>
